{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-payment" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary">
          <i class="fa fa-save"></i>
        </button>
        <button type="button" id="test-connection" class="btn btn-info" data-toggle="tooltip" title="Тест соединения с API">
          <i class="fa fa-plug"></i> {{ button_test_connection }}
        </button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default">
          <i class="fa fa-reply"></i>
        </a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible">
      <i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <i class="fa fa-pencil"></i> {{ text_edit }}
          <small class="text-muted">API v1.14</small>
        </h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-payment" class="form-horizontal">
          
          <!-- API Settings -->
          <fieldset>
            <legend>Настройки API</legend>
            
            <div class="form-group required">
              <label class="col-sm-2 control-label" for="input-mch-id">
                {{ entry_mch_id }}
              </label>
              <div class="col-sm-10">
                <input type="text" name="payment_ipay_mch_id" value="{{ payment_ipay_mch_id }}" 
                       placeholder="{{ entry_mch_id }}" id="input-mch-id" class="form-control" />
                {% if error_mch_id %}
                <div class="text-danger">{{ error_mch_id }}</div>
                {% endif %}
                <div class="help-block">{{ help_mch_id }}</div>
              </div>
            </div>
            
            <div class="form-group required">
              <label class="col-sm-2 control-label" for="input-mch-key">
                {{ entry_mch_key }}
              </label>
              <div class="col-sm-10">
                <input type="password" name="payment_ipay_mch_key" value="{{ payment_ipay_mch_key }}" 
                       placeholder="{{ entry_mch_key }}" id="input-mch-key" class="form-control" />
                {% if error_mch_key %}
                <div class="text-danger">{{ error_mch_key }}</div>
                {% endif %}
                <div class="help-block">{{ help_mch_key }}</div>
              </div>
            </div>
            
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-test-mode">
                {{ entry_test_mode }}
              </label>
              <div class="col-sm-10">
                <select name="payment_ipay_test_mode" id="input-test-mode" class="form-control">
                  {% if payment_ipay_test_mode %}
                  <option value="1" selected="selected">{{ text_enabled }}</option>
                  <option value="0">{{ text_disabled }}</option>
                  {% else %}
                  <option value="1">{{ text_enabled }}</option>
                  <option value="0" selected="selected">{{ text_disabled }}</option>
                  {% endif %}
                </select>
                <div class="help-block">{{ help_test_mode }}</div>
              </div>
            </div>
          </fieldset>
          
          <!-- Order Settings -->
          <fieldset>
            <legend>Настройки заказов</legend>
            
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-order-status">
                {{ entry_order_status }}
              </label>
              <div class="col-sm-10">
                <select name="payment_ipay_order_status_id" id="input-order-status" class="form-control">
                  {% for order_status in order_statuses %}
                  {% if order_status.order_status_id == payment_ipay_order_status_id %}
                  <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                  {% else %}
                  <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                  {% endif %}
                  {% endfor %}
                </select>
                <div class="help-block">{{ help_order_status }}</div>
              </div>
            </div>
            
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-failed-status">
                {{ entry_failed_status }}
              </label>
              <div class="col-sm-10">
                <select name="payment_ipay_order_failed_status_id" id="input-failed-status" class="form-control">
                  {% for order_status in order_statuses %}
                  {% if order_status.order_status_id == payment_ipay_order_failed_status_id %}
                  <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                  {% else %}
                  <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                  {% endif %}
                  {% endfor %}
                </select>
                <div class="help-block">{{ help_failed_status }}</div>
              </div>
            </div>
          </fieldset>
          
          <!-- General Settings -->
          <fieldset>
            <legend>Общие настройки</legend>
            
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-min-total">
                {{ entry_min_total }}
              </label>
              <div class="col-sm-10">
                <input type="text" name="payment_ipay_min_total" value="{{ payment_ipay_min_total }}" 
                       placeholder="0.00" id="input-min-total" class="form-control" />
                <div class="help-block">{{ help_min_total }}</div>
              </div>
            </div>
            
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-geo-zone">
                {{ entry_geo_zone }}
              </label>
              <div class="col-sm-10">
                <select name="payment_ipay_geo_zone_id" id="input-geo-zone" class="form-control">
                  <option value="0">{{ text_all_zones }}</option>
                  {% for geo_zone in geo_zones %}
                  {% if geo_zone.geo_zone_id == payment_ipay_geo_zone_id %}
                  <option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
                  {% else %}
                  <option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
                  {% endif %}
                  {% endfor %}
                </select>
                <div class="help-block">{{ help_geo_zone }}</div>
              </div>
            </div>
            
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-status">
                {{ entry_status }}
              </label>
              <div class="col-sm-10">
                <select name="payment_ipay_status" id="input-status" class="form-control">
                  {% if payment_ipay_status %}
                  <option value="1" selected="selected">{{ text_enabled }}</option>
                  <option value="0">{{ text_disabled }}</option>
                  {% else %}
                  <option value="1">{{ text_enabled }}</option>
                  <option value="0" selected="selected">{{ text_disabled }}</option>
                  {% endif %}
                </select>
              </div>
            </div>
            
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-sort-order">
                {{ entry_sort_order }}
              </label>
              <div class="col-sm-10">
                <input type="text" name="payment_ipay_sort_order" value="{{ payment_ipay_sort_order }}" 
                       placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
              </div>
            </div>
          </fieldset>
        </form>
      </div>
    </div>
    
    <!-- API Documentation -->
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">
          <i class="fa fa-info-circle"></i> Информация об API
        </h3>
      </div>
      <div class="panel-body">
        <p><strong>Версия API:</strong> v1.14</p>
        <p><strong>Документация:</strong> <a href="https://checkout.ipay.ua/doc" target="_blank">https://checkout.ipay.ua/doc</a></p>
        <p><strong>Поддерживаемые валюты:</strong> UAH, USD, EUR</p>
        <p><strong>Callback URL:</strong> <code>{{ callback_url }}</code></p>
        
        <div class="alert alert-warning">
          <i class="fa fa-warning"></i>
          <strong>Важно:</strong> Убедитесь, что ваш сайт работает по HTTPS для production среды.
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
$('#test-connection').on('click', function() {
    var btn = $(this);
    var originalText = btn.html();
    
    var mch_id = $('#input-mch-id').val();
    var mch_key = $('#input-mch-key').val();
    var test_mode = $('#input-test-mode').val();
    
    if (!mch_id || !mch_key) {
        alert('Пожалуйста, заполните Merchant ID и Merchant Key');
        return;
    }
    
    btn.html('<i class="fa fa-spinner fa-spin"></i> Тестирование...').prop('disabled', true);
    
    $.ajax({
        url: 'index.php?route=extension/payment/ipay/testConnection&user_token={{ user_token }}',
        type: 'POST',
        dataType: 'json',
        data: {
            mch_id: mch_id,
            mch_key: mch_key,
            test_mode: test_mode
        },
        success: function(json) {
            if (json['success']) {
                alert('✅ ' + json['success']);
            } else if (json['error']) {
                alert('❌ ' + json['error']);
            } else {
                alert('❌ Неизвестная ошибка');
            }
        },
        error: function() {
            alert('❌ Ошибка соединения с сервером');
        },
        complete: function() {
            btn.html(originalText).prop('disabled', false);
        }
    });
});

// Show/hide password
$('#input-mch-key').after('<span class="input-group-btn"><button type="button" class="btn btn-default" onclick="togglePassword()"><i class="fa fa-eye"></i></button></span>').parent().addClass('input-group');

function togglePassword() {
    var field = $('#input-mch-key');
    var type = field.attr('type') === 'password' ? 'text' : 'password';
    field.attr('type', type);
    $(event.target).toggleClass('fa-eye fa-eye-slash');
}
</script>

{{ footer }}